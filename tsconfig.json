{
  "compilerOptions": {
    "allowJs": true,
    "jsx": "react",
    "removeComments": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "strict": true,
    "baseUrl": "./src",
    "outDir": "./dist",
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "target": "es5",
    "lib": ["ESNext", "es6", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "typeRoots": ["@types", "./node_modules/@types"],
    "paths": {
      "@/*": ["../src/*"],
      "@P/*": ["../src/Pages/*"],
      "@A/*": ["../src/Api/*"],
      "@T/*": ["../src/Theme/*"],
      "@U/*": ["../src/Utils/*"]
    },
    "emitDecoratorMetadata": true
  },
  "include": ["src", "@types/index.d.ts", "@types/definition.d.ts"],
  "exclude": ["node_modules", "config/*"]
}
